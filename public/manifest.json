{
    "name": "Skill Forge",
    "short_name": "SkillForge",
    "description": "Skill Forge helps you learn in-demand skills through expert-led online courses in tech, business, design, and more.",
    "start_url": "/",
    "scope": "/",
    "display": "standalone",
    "display_override": ["window-controls-overlay"],
    "orientation": "portrait",
    "theme_color": "#0369a1",
    "background_color": "#FFFFFF",
    "icons": [
        {
            "src": "/icons/icon-96.png",
            "sizes": "96x96",
            "type": "image/png"
        },
        {
            "src": "/icons/icon-192.png",
            "sizes": "192x192",
            "type": "image/png"
        },
        {
            "src": "/icons/icon-512.png",
            "sizes": "512x512",
            "type": "image/png"
        }
    ],
    "shortcuts": [
        {
            "name": "Browse Courses",
            "url": "/courses"
        },
        {
            "name": "My Learning",
            "url": "/dashboard"
        }
    ],
    "related_applications": [
        {
            "platform": "webapp",
            "url": "https://skill-forge-site.vercel.app/manifest.json"
        }
    ],
    "launch_handler": {
        "client_mode": "focus-existing"
    },
    "capture_links": "existing_client_event",
    "url_handlers": [
        {
            "origin": "https://skill-forge-site.vercel.app"
        }
    ]
}
